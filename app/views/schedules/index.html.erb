<h1>サブスクアニメ時間割</h1>
<p>現在の視聴リスト</p>
  <table class="table" border="1" width="1000" height="700">
    <tr>
      <th width="10%">時間割</th>
      <th>月</th>
      <th>火</th>
      <th>水</th>
      <th>木</th>
      <th>金</th>
      <th>土</th>
      <th>日</th>
    </tr>
  <% 1.upto(5) do |i| %>
    <tr>
      <td><%= i %></td>
      <% 7.times do %>
      <td class="align-middle" style="text-align: center;"><button type="button" class="btn btn-outline-secondary">追加</button></td>
      <% end %>
    </tr>
  <% end %>
  </table>
