<div style="padding: 20px;">
  <h1>サブスクアニメ時間割</h1>
  <p>現在の視聴リスト</p>
  <%= link_to '時間割を追加する', new_schedule_path, remote: true, class: "btn btn-outline-success" %>
</div>

<p><%= link_to 'タイトルリストへ', contents_path %></p>

<table class="table" border="1" width="1000" height="700">
  <div id="content-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
  <div id="schedule-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
    <tr height="10%">
      <th width="9%">時間割</th>
      <th width="13%">月</th>
      <th width="13%">火</th>
      <th width="13%">水</th>
      <th width="13%">木</th>
      <th width="13%">金</th>
      <th width="13%">土</th>
      <th width="13%">日</th>
    </tr>
  <% 1.upto(5) do |i| %>
    <tr height="18%">
      <td><%= i %></td>
      <td id="月<%= i %>" class="align-middle" style="text-align: center;"></td>
      <td id="火<%= i %>" class="align-middle" style="text-align: center;"></td>
      <td id="水<%= i %>" class="align-middle" style="text-align: center;"></td>
      <td id="木<%= i %>" class="align-middle" style="text-align: center;"></td>
      <td id="金<%= i %>" class="align-middle" style="text-align: center;"></td>
      <td id="土<%= i %>" class="align-middle" style="text-align: center;"></td>
      <td id="日<%= i %>" class="align-middle" style="text-align: center;"></td>
    </tr>
  <% end %>
</table>

<script>
<% @schedules.each do |schedule| %>
$('#<%= "#{schedule.day}" + "#{schedule.order}" %>').html('<%= link_to schedule_path(schedule.id), method: :delete, data: { confirm: "削除しますか？" } do %><button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button><% end %>');
$('#<%= "#{schedule.day}" + "#{schedule.order}" %>').append('<%= link_to schedule.content.title, schedule.content.url, target: :_blank, rel: "noopener noreferrer", type: "button", class: "btn btn-outline-primary", style: "font-size: 0.75rem;" %>');
<% end %>
</script>