<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= current_user.show_email %></td>
        </tr>
        <tr>
          <th scope="row">ニックネーム</th>
          <td><%= current_user.name || "未設定" %></td>
        </tr>
      </table>
      <% unless current_user.guest %>
        <%= link_to "退会する", registration_path(current_user), method: :delete, data: { confirm: "退会後はログイン、LINE通知ができなくなります。よろしいですか？" }, class: 'btn btn-secondary float-right' %>
      <% end %>
    </div>
  </div>
</div>
