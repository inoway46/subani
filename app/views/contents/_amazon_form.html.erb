<div class="modal-dialog" role="document">
  <div class="modal-content">
    <%= form_with(model: @content) do |f| %>
    <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2 style="padding: 15px;"><%= pluralize(@content.errors.count, "件の入力エラー") %>:</h2>
      <ul>
        <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="modal-header">
      <h5 class="modal-title">【タイトル登録】Amazonプライム</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-header actions">
      <%= f.submit class: "btn btn-primary"%>
    </div>
    <div class="modal-body">
        <%= f.collection_check_boxes :master_id, Master.all.where(media: "Amazonプライム").order(rank: :asc), :id, :title, include_hidden: false do |master| %>
        <p>
          <%= master.check_box %>
          <%= master.text %>
        </p>
        <% end %>
    </div>
    <% end %>
  </div>
</div>

<style>
  .modal-dialog {
    max-width: inherit;
    width: 70%;
    margin: 0 auto;
    padding-top: 10%;
  }
</style>