<div class="col-sm-4" style="padding-bottom:30px;">
  <div class="card h-100">
    <div class="card-header" id="<%= content.decorate.media_color %>"><%= content.title.truncate(18) %></div>
    <div class="card-body">
      <p class="card-text"><%= content.stream_i18n %>曜配信</p>
      <% if content.line_flag %>
        <%= link_to line_off_content_path(content.id, params: { content: { line_flag: false } }), :method => :patch do %><div class="btn btn-success">LINE通知中</div><% end %>
      <% else %>
        <%= link_to line_off_content_path(content.id, params: { content: { line_flag: true } }), :method => :patch do %><div class="btn btn-secondary">LINEで通知する</div><% end %>
      <% end %>
    </div>
    <div class="card-footer">
      <%= link_to content.url, target: :_blank, rel: "noopener noreferrer", class: "media-link" do %><%= content.media %>で観る<i class="fas fa-external-link-alt" style="padding-left: 5px;"></i><% end %>
    </div>
  </div>
</div>